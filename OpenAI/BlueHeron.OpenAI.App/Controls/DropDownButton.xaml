<?xml version="1.0" encoding="UTF-8" ?>
<Button x:Class="BlueHeron.OpenAI.Controls.PopupButton"
		xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		xmlns:local="clr-namespace:BlueHeron.OpenAI.Controls"
		x:Name="btnDropDown"
		Clicked="DropDownButtonClicked">
	<Button.ImageSource>
		<FontImageSource FontFamily="Segoe MDL2 Assets"
						 Size="12"
						 Color="White"
						 Glyph="{Binding Source={x:Reference btnDropDown},Path=Glyph}" />
	</Button.ImageSource>
</Button>