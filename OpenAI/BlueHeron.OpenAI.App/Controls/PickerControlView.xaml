<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
						 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
						 xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
						 x:Class="BlueHeron.OpenAI.Controls.PickerControlView"
						 Margin="10"
						 VerticalOptions="Center"      
						 Title="PickerControlView">
	<Grid x:Name="grv"
		  Padding="8">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Label x:Name="lblTitle"
			   FontSize="20"
			   FontAttributes="Bold" />
		<CollectionView Grid.Row="1"
						x:Name="clPickerView"
                        VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"
                        SelectionMode="Single"
                        SelectionChanged="PickerView_SelectionChanged">
		</CollectionView>
	</Grid>
</mauiPopup:BasePopupPage>